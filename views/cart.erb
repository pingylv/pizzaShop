<h2>Youre cart</h2>


<div id="cart">
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">qty</th>
    </tr>
  </thead>
  <tbody>
  	<% total_price = 0 %>
  	<% total_qty = 0 %>
    <% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i%>
    <% total_qty += item[1].to_i %>
    <% end %>

    <tr>
      <td>Total:</td>
      <td><%= total_price %> Eur</td>
      <td><%= total_qty %> Pizzas</td>
    </tr>

  </tbody>
</table>

<form action="/place_order" method="POST" roles="form">

	<input type="hidden" name="order[orders_input]" value="<%= @orders_input %>" >

	<div class="form-group">
		<label>Name</label>
		<input name="orders_input[name]" type="text" class="form-control" placeholder="Youre name">
	</div>

	<div class="form-group">
		<label>Phone</label>
		<input name="order[phone]" type="text" class="form-control" placeholder="Youre phone">
	</div>

	<div class="form-group">
		<label>Delivery address</label>
		<textarea name="order[address]" class="form-control" placeholder="Delivery address"></textarea>
	</div>

<button type="submit" class="btn btn-success btn-lg">Place this order</button>

<button class="btn btn-danger btn-lg" onclick="return cancel_order()">Cancel</button>

</form>
</div>